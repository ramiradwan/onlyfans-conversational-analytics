    "dark": {  
      "contrastThreshold": 4.5,  
      "primaryContrastText": "#fff",  
      "secondaryContrastText": "#fff",  
      "textPrimary": "#f1f5f9",  
      "textSecondary": "#94a3b8",  
      "actionHover": "rgba(255,255,255,0.08)",  
      "actionSelected": "rgba(255,255,255,0.12)",  
      "actionDisabled": "rgba(255,255,255,0.3)",  
      "divider": "rgba(255,255,255,0.12)",  
      "placeholder": "rgba(255,255,255,0.08)"  
    }  
  },  
  
  "typography": {  
    "fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",  
    "h4": { "fontWeight": 700, "fontSize": "2rem" },  
    "h5": { "fontWeight": 600, "fontSize": "1.5rem" },  
    "body1": { "fontSize": "1rem" },  
    "body2": { "fontSize": "0.875rem" },  
    "button": { "textTransform": "none", "fontWeight": 600 }  
  },  
  
  "layout": {  
    "pagePadding": 3,  
    "sectionSpacing": 2  
  },  
  
  "effects": {  
    "cardBorder": { "borderRadius": 8 },  
    "chartFrame": { "borderRadius": 4 },  
    "headerBorder": {},  
    "sideBorder": {}  
  },  
  
  "skeleton": {  
    "chart": {  
      "minHeight": 200,  
      "maxHeight": "40vh",  
      "width": "100%",  
      "variant": "rectangular",  
      "animation": "wave"  
    },  
    "kpiTitle": {  
      "variant": "text",  
      "sx": { "fontSize": "0.875rem", "width": "60%" },  
      "animation": "wave"  
    },  
    "kpiValue": {  
      "variant": "text",  
      "sx": { "fontSize": "1.5rem", "width": "40%", "mt": 0.5 },  
      "animation": "wave"  
    },  
    "table": {  
      "variant": "rectangular",  
      "width": "100%",  
      "minHeight": 150,  
      "maxHeight": "30vh",  
      "animation": "wave"  
    },  
    "avatar": {  
      "variant": "circular",  
      "width": 40,  
      "height": 40,  
      "animation": "wave"  
    }  
  }  
}  